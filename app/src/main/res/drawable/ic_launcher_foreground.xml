<?xml version="1.0" encoding="utf-8"?>
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="108"
    android:viewportHeight="108">

    <group
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:translateX="10.8"
        android:translateY="10.8">

        <!-- Clock circle background -->
        <path
            android:fillColor="#FFFFFF"
            android:pathData="M54,20 A34,34 0 1,1 54,88 A34,34 0 1,1 54,20 Z" />

        <!-- Clock face border -->
        <path
            android:fillColor="#00000000"
            android:strokeColor="#1976D2"
            android:strokeWidth="3"
            android:pathData="M54,20 A34,34 0 1,1 54,88 A34,34 0 1,1 54,20 Z" />

        <!-- Clock center dot -->
        <path
            android:fillColor="#1976D2"
            android:pathData="M54,54 m-4,0 a4,4 0 1,1 8,0 a4,4 0 1,1 -8,0" />

        <!-- Hour hand (pointing to 10) -->
        <path
            android:fillColor="#00000000"
            android:strokeColor="#1976D2"
            android:strokeWidth="3.5"
            android:strokeLineCap="round"
            android:pathData="M54,54 L42,42" />

        <!-- Minute hand (pointing to 2) -->
        <path
            android:fillColor="#00000000"
            android:strokeColor="#1976D2"
            android:strokeWidth="2.5"
            android:strokeLineCap="round"
            android:pathData="M54,54 L66,38" />

        <!-- 12 o'clock mark -->
        <path
            android:fillColor="#1976D2"
            android:pathData="M54,24 L54,28" />

        <!-- 3 o'clock mark -->
        <path
            android:fillColor="#1976D2"
            android:pathData="M84,54 L80,54" />

        <!-- 6 o'clock mark -->
        <path
            android:fillColor="#1976D2"
            android:pathData="M54,84 L54,80" />

        <!-- 9 o'clock mark -->
        <path
            android:fillColor="#1976D2"
            android:pathData="M24,54 L28,54" />

        <!-- Project checklist icon overlay (bottom right) -->
        <group
            android:translateX="58"
            android:translateY="58">

            <!-- Checklist background circle -->
            <path
                android:fillColor="#4CAF50"
                android:pathData="M12,12 m-14,0 a14,14 0 1,1 28,0 a14,14 0 1,1 -28,0" />

            <!-- Checkmark -->
            <path
                android:fillColor="#00000000"
                android:strokeColor="#FFFFFF"
                android:strokeWidth="2.5"
                android:strokeLineCap="round"
                android:strokeLineJoin="round"
                android:pathData="M6,12 L10,16 L18,8" />
        </group>
    </group>
</vector>
