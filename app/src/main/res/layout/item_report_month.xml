<?xml version="1.0" encoding="utf-8"?>
<!-- Item pour regroupement par MOIS -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- En-tête du mois -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_month_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Octobre 2025"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/tv_month_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 semaines • 22 jours ouvrés"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <!-- Total heures du mois -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/tv_month_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="176.00h"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary" />

                <TextView
                    android:id="@+id/tv_month_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="35 rapports"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

        </LinearLayout>

        <!-- Indicateurs visuels -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="12dp">

            <!-- Jours travaillés -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_month_days_worked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jours travaillés"
                    android:textSize="10sp"
                    android:textColor="@color/text_secondary"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Moyenne par jour -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_month_average"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8.80h"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Moy/Jour"
                    android:textSize="10sp"
                    android:textColor="@color/text_secondary"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Projets distincts -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_month_projects"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Projets"
                    android:textSize="10sp"
                    android:textColor="@color/text_secondary"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

        <!-- Séparateur -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_secondary"
            android:alpha="0.3"
            android:layout_marginBottom="12dp" />

        <!-- Breakdown par semaine -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Détail par semaine:"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="8dp" />

            <!-- Liste des semaines (recyclerView interne) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_weeks_in_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>

        <!-- Graphique des heures (optionnel - peut être ajouté plus tard) -->
        <!-- <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chart_month"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp" /> -->

        <!-- Bouton Détails -->
        <Button
            android:id="@+id/btn_month_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voir tous les rapports"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            style="@style/Widget.AppCompat.Button.Borderless" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
