<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- En-tÃªte -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diagnostic SystÃ¨me de Notes"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VÃ©rification de la connexion et des erreurs rÃ©seau"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginBottom="24dp" />

            <!-- Statut de connexion -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“¡ Statut de Connexion"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tv_connection_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="VÃ©rification..."
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tv_api_url"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="URL API: -"
                        android:textSize="12sp"
                        android:textColor="#757575" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Statistiques Notes -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“Š Statistiques Notes"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tv_notes_stats"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chargement..."
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Statistiques d'erreurs -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“Š Statistiques d'Erreurs"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tv_error_stats"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Aucune erreur dÃ©tectÃ©e"
                        android:textSize="14sp"
                        android:fontFamily="monospace"
                        android:background="#F0F8FF"
                        android:padding="12dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Journal des erreurs -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ“ Journal DÃ©taillÃ©"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btn_clear_logs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Effacer"
                            android:textSize="12sp"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:padding="4dp" />
                    </LinearLayout>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:background="#F5F5F5"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/tv_error_log"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Aucune erreur enregistrÃ©e"
                            android:textSize="11sp"
                            android:fontFamily="monospace"
                            android:textColor="#333333" />
                    </ScrollView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Test de connexion -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”§ Tests de Connexion"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <Button
                        android:id="@+id/btn_test_api"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tester l'API Notes"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/btn_test_sync"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tester la Synchronisation"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/btn_refresh_diagnostic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Actualiser le Diagnostic" />

                    <ProgressBar
                        android:id="@+id/progress_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:visibility="gone" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- DerniÃ¨re synchronisation -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”„ DerniÃ¨re Synchronisation"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tv_last_sync"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jamais synchronisÃ©"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
