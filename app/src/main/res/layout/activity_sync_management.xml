<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Fichiers de Synchronisation"
        app:titleTextColor="@color/white" />

    <!-- Statistiques de synchronisation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/surface"
        android:elevation="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Statistiques de Synchronisation"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_sync_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="En attente: 0 fichiers (0.0 KB)\nSynchronisés: 0 fichiers"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>

    <!-- Boutons d'action -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/surface">

        <Button
            android:id="@+id/btn_sync_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Synchroniser tout"
            android:background="@drawable/button_primary"
            android:textColor="@color/white"
            android:layout_marginEnd="8dp"
            android:enabled="false" />

        <Button
            android:id="@+id/btn_refresh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Actualiser"
            android:background="@drawable/button_secondary"
            android:textColor="@color/white"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Légende des statuts -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/background_light">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_sync_pending"
                android:layout_marginEnd="8dp"
                android:contentDescription="En attente" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="En attente"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_sync_success"
                android:layout_marginEnd="8dp"
                android:contentDescription="Synchronisé" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Synchronisé"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />

        </LinearLayout>

    </LinearLayout>

    <!-- Liste des fichiers de synchronisation -->
    <ListView
        android:id="@+id/list_view_sync_files"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:divider="@null"
        android:dividerHeight="0dp" />

    <!-- Message si aucun fichier -->
    <TextView
        android:id="@+id/tv_no_files"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aucun fichier de synchronisation trouvé"
        android:textSize="16sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone" />

</LinearLayout>
