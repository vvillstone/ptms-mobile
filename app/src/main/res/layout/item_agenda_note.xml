<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Header: Type + Heure -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- Badge Type de Note -->
            <TextView
                android:id="@+id/tvNoteTypeBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“"
                android:textSize="20sp"
                android:layout_marginEnd="8dp" />

            <!-- Titre de la Note -->
            <TextView
                android:id="@+id/tvNoteTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Titre de la note"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Badge Important -->
            <TextView
                android:id="@+id/tvImportantBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â­"
                android:textSize="18sp"
                android:visibility="gone"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Contenu de la Note (preview) -->
        <TextView
            android:id="@+id/tvNoteContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contenu de la note..."
            android:textSize="14sp"
            android:textColor="#666"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginBottom="8dp" />

        <!-- Footer: Heure + Projet + CatÃ©gorie -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Heure -->
            <TextView
                android:id="@+id/tvNoteTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09:30"
                android:textSize="12sp"
                android:textColor="#999"
                android:drawablePadding="4dp"
                android:layout_marginEnd="12dp" />

            <!-- Projet -->
            <TextView
                android:id="@+id/tvNoteProject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“ Nom du Projet"
                android:textSize="12sp"
                android:textColor="#1976D2"
                android:maxLines="1"
                android:ellipsize="end"
                android:visibility="gone" />

            <!-- CatÃ©gorie -->
            <TextView
                android:id="@+id/tvNoteCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CatÃ©gorie"
                android:textSize="11sp"
                android:textColor="#FFF"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Tags (si prÃ©sents) -->
        <TextView
            android:id="@+id/tvNoteTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="#tag1 #tag2"
            android:textSize="11sp"
            android:textColor="#FF9800"
            android:layout_marginTop="6dp"
            android:visibility="gone" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
