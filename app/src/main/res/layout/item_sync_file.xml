<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/sync_item_background"
    android:elevation="2dp">

    <!-- Icône de statut de synchronisation -->
    <ImageView
        android:id="@+id/iv_sync_status"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_sync_pending"
        android:contentDescription="Statut de synchronisation" />

    <!-- Informations principales -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Nom du projet -->
        <TextView
            android:id="@+id/tv_project_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nom du Projet"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="4dp" />

        <!-- Date et heures -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Date -->
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="01/01/2024 14:30"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginEnd="8dp" />

            <!-- Heures travaillées -->
            <TextView
                android:id="@+id/tv_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8.00 h"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:background="@drawable/hours_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp" />

        </LinearLayout>

        <!-- Statut et nom de fichier -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <!-- Statut -->
            <TextView
                android:id="@+id/tv_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="En attente"
                android:textSize="12sp"
                android:textColor="@color/text_hint" />

            <!-- Nom du fichier (pour debug) -->
            <TextView
                android:id="@+id/tv_filename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="timeEntry_20240101_143000.json"
                android:textSize="10sp"
                android:textColor="@color/text_hint"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
