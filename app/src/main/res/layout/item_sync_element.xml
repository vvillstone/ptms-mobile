<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Icône de statut -->
        <ImageView
            android:id="@+id/iv_status_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_sync_pending"
            android:layout_marginEnd="12dp"
            android:contentDescription="Statut de synchronisation" />

        <!-- Informations de l'élément -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Type d'élément -->
            <TextView
                android:id="@+id/tv_item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rapport de temps"
                android:textSize="11sp"
                android:textColor="@color/text_secondary"
                android:textStyle="bold"
                android:layout_marginBottom="2dp" />

            <!-- Titre -->
            <TextView
                android:id="@+id/tv_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8.5h - Projet X"
                android:textSize="15sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginBottom="2dp" />

            <!-- Sous-titre (description ou projet) -->
            <TextView
                android:id="@+id/tv_item_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description de la tâche"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="4dp" />

            <!-- Date et statut -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="24/01/2025 14:30"
                    android:textSize="11sp"
                    android:textColor="@color/text_hint" />

                <TextView
                    android:id="@+id/tv_item_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="En attente"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/warning" />

            </LinearLayout>

        </LinearLayout>

        <!-- Bouton de suppression (visible uniquement pour les erreurs) -->
        <Button
            android:id="@+id/btn_delete_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✕"
            android:textSize="18sp"
            android:textColor="@color/error"
            android:background="@android:color/transparent"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:visibility="gone"
            android:contentDescription="Supprimer l'élément" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
